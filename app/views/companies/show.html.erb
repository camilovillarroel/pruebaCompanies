<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>


<h3>Reclamos:</h3>
<ol id='complaints'>
<%  @complaints.each do |complaint| %>
<li><%= complaint.content %></li>
<% end %>
</ol>

<%= form_with model: [@complaint], remote: true, url: company_add_complaint_path(@company) do |form| %>

  <div class="form-group">
    <h5>Agregar reclamo</h3>
    <%= form.text_field :content, class:'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>







