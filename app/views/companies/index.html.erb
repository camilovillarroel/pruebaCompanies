
<h1>Empresas</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id= 'companies'>
    <%= render @companies %>
  </tbody>
</table>

<br>

<%= form_with(model: @company, remote: true) do |form| %>

  <div class="form-group">
    <h5>Agregar compañía</h3>
    <%= form.label :nombre %>
    <%= form.text_field :name, class:'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>






